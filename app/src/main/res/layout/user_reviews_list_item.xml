<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rating_tv"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corner_text_view"
        android:fontFamily="@font/titr_bold"
        android:gravity="center"
        android:text="@string/rating_text_test"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/reviewer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/reviewer_test"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/rating_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_reviewer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/yekan_bakh_regular"
        android:text="@string/review_date"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/reviewer_tv"
        app:layout_constraintTop_toBottomOf="@+id/reviewer_tv" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/review_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="58dp"
        android:fontFamily="@font/yekan_bakh_regular"
        android:textDirection="rtl"
        android:lines="3"
        android:text="@string/review_test"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/date_reviewer_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_reviewer_tv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_review_btn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-30dp"
        android:fontFamily="@font/yekan_bakh_regular"
        android:text="@string/delete_review"
        app:icon="@drawable/ic_delete_red"
        app:iconGravity="end"
        app:iconTint="#D40D0D"
        android:textColor="#D40D0D"
        android:textDirection="rtl"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/review_tv"
        app:layout_constraintTop_toBottomOf="@+id/review_tv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_review_btn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:icon="@drawable/pencil"
        app:iconSize="18dp"
        app:iconGravity="end"
        app:iconTint="#2F302F"
        android:fontFamily="@font/yekan_bakh_regular"
        android:text="@string/edit_review"
        android:textDirection="rtl"
        android:textColor="#2F302F"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/delete_review_btn"
        app:layout_constraintTop_toBottomOf="@+id/review_tv" />

    <View
        android:id="@+id/view2"
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/dark_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_review_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>

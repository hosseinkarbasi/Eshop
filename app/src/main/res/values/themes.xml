<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eshop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_shadow</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Splash Screen Theme-->
    <style name="Theme.splash_theme" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/main_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="splashScreenIconSize">100dp</item>
        <item name="postSplashScreenTheme">@style/Theme.Eshop</item>

    </style>


    <!--    //Bottom Sheet Theme-->

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_top_curve</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#9A9A9A</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>


    <!--Style for Dialog    -->
    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">21dp</item>
    </style>

    <style name="RoundShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
    </style>


    <style name="TabFont" parent="TextAppearance.Design.Tab">

        <item name="android:fontFamily">@font/yekan_bakh_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/yekan_bakh_regular</item>
    </style>

</resources>